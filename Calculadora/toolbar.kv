<SampGridLayout>:
    rows: 2

    BoxLayout:
        size_hint_y: None
        height: 30
        spacing: 10

        # Make the background for the toolbar white
        canvas:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        Button:
            background_color: 0,1,1,1
            text: "Hola"
            background_normal: ''
            background_down: ''
            size_hint_x: None
            width: 30
        Button:
            background_color: 1,0,1,1
            background_normal: ''
            background_down: ''
            size_hint_x: None
            width: 30
        Button:
            background_color: 1,1,0,1
            background_normal: ''
            background_down: ''
            size_hint_x: None
            width: 30