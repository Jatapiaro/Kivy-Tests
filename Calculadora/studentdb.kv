#: import main student_main
#: import ListAdapter kivy.adapters.listadapter.ListAdapter
#: import ListItemButton kivy.uix.listview.ListItemButton

<StudentDB>:
    orientation: "vertical"
    first_name_text_input: first_name
    last_name_text_input: last_name
    student_list: student_list_view
    padding: 10
    spacing: 10

    BoxLayout:
        size_hint_y: None
        height: "40dp"

        Label:
            text:"First Name"
        TextInput:
            id: first_name

        Label:
            text:"Last Name"
        TextInput:
            id: last_name

    BoxLayout:
        size_hint_y: None
        height: "40dp"
        Button:
            text: "Submit"
            size_hint_x: 15
            on_press: root.submit_students()

        Button:
            text: "Delete"
            size_hint_x: 15
            on_press: root.delete_students()

        Button:
            text: "Replace"
            size_hint_x: 15
            on_press: root.replace_students()

    ListView
        id: student_list_view
        adapter:
            ListAdapter(data=["Doug Smith"],cls=main.StudentListButton)